<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/resetEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Email"
        android:textSize="19sp"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:layout_marginTop="29dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/resetEmailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Link"
        android:textSize="17sp"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:layout_marginEnd="30dp"
        android:textColor="@color/dash_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/resetEmail"
        app:layout_constraintBottom_toBottomOf="@id/resetEmail"/>

    <EditText
        android:id="@+id/resetEmailEt"
        android:layout_width="0dp"
        android:inputType="textEmailAddress"
        android:layout_marginStart="-4dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/resetEmail"
        app:layout_constraintEnd_toEndOf="@+id/resetEmailBtn"
        app:layout_constraintTop_toBottomOf="@id/resetEmail"
        android:layout_marginTop="16dp"
        android:hint="Enter new email"/>

</androidx.constraintlayout.widget.ConstraintLayout>