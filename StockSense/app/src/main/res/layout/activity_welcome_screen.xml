<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dash_bg"
    tools:context=".welcome_screen">

    <ImageView
        android:id="@+id/watchlistIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/blue_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titilliumweb_regular"
        android:text="Welcome to"
        android:textColor="#B5BBC9"
        android:layout_marginTop="-6dp"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="@+id/watchlistIcon"
        app:layout_constraintStart_toStartOf="@+id/watchlistIcon"
        app:layout_constraintTop_toBottomOf="@+id/watchlistIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCKSENSE"
        android:textSize="48sp"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/titilliumweb_light"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/welcomeTV"
        app:layout_constraintStart_toStartOf="@+id/welcomeTV"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTV"/>

    <Button
        android:id="@+id/createAccountBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:text="Create Account"
        android:textColor="@color/dash_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/createAccountBTN"
        app:layout_constraintStart_toStartOf="@+id/createAccountBTN"
        app:layout_constraintTop_toBottomOf="@+id/createAccountBTN">

        <TextView
            android:id="@+id/loginTVque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_regular"
            android:text="Already have an account!"
            android:textColor="#B5BBC9"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/loginTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:fontFamily="@font/titilliumweb_semi_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/loginTVque"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>