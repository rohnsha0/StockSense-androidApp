<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/dashboard_white_bg"
    android:paddingBottom="45dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addIndicesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Indices"
        android:textSize="19sp"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:layout_marginTop="29dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/doneIndicesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="17sp"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:layout_marginEnd="30dp"
        android:textColor="@color/dash_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/addIndicesTV"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewNifty"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/addIndicesTV"
        android:background="@drawable/dash_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/cbNifty50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nifty50"
            android:layoutDirection="rtl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:button="@drawable/vertical_radio_text"
            android:textSize="19sp"
            android:fontFamily="@font/titilliumweb_semi_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewSensex"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@id/viewNifty"
        android:background="@drawable/dash_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/cbSensex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BSE Sensex"
            android:layoutDirection="rtl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:button="@drawable/vertical_radio_text"
            android:textSize="19sp"
            android:fontFamily="@font/titilliumweb_semi_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>