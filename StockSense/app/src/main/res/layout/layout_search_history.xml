<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchLay"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logoHistory"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="6dp"
        android:background="@drawable/logo_bg"
        android:layout_marginTop="9dp"
        android:src="@drawable/baseline_history_24"
        android:layout_marginStart="24dp"
        android:elevation="2dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="18dp"
        android:padding="9dp"
        android:src="@drawable/baseline_open_in_new_24"
        app:layout_constraintBottom_toBottomOf="@id/logoHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logoHistory"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textSearchIcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S"
        android:visibility="gone"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/titillium_web_bold"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/logoHistory"
        app:layout_constraintBottom_toBottomOf="@id/logoHistory"
        app:layout_constraintStart_toStartOf="@id/logoHistory"
        app:layout_constraintEnd_toEndOf="@id/logoHistory"/>

    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="6dp"
        android:text="brandName"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/logoHistory"
        app:layout_constraintEnd_toStartOf="@+id/tvIndexSearch"
        app:layout_constraintStart_toEndOf="@id/logoHistory"
        app:layout_constraintTop_toTopOf="@+id/logoHistory" />

    <TextView
        android:id="@+id/tvIndexSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="in NSE"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        app:layout_constraintEnd_toStartOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3"
        android:layout_marginEnd="4dp"
        android:textSize="12dp"
        android:textStyle="italic"
        android:fontFamily="@font/titilliumweb_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>