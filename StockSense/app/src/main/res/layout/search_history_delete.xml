<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dashboard_white_bg"
    android:paddingBottom="45dp">

    <TextView
        android:id="@+id/removeSearchH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove History"
        android:textSize="19sp"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:layout_marginTop="29dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/cancelRemoveSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="17sp"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:layout_marginEnd="30dp"
        android:textColor="@color/dash_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/removeSearchH1"
        app:layout_constraintBottom_toBottomOf="@id/removeSearchH1"/>

    <TextView
        android:id="@+id/selectedDlt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/removeSearchH1"
        app:layout_constraintTop_toBottomOf="@id/removeSearchH1"
        android:layout_marginTop="24dp"
        android:text="Selected Item to be deleted: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStockStmbolDelete"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/selectedDlt"
        app:layout_constraintBottom_toBottomOf="@id/selectedDlt"
        app:layout_constraintStart_toEndOf="@id/selectedDlt"
        android:fontFamily="@font/titilliumweb_semi_bold"
        android:text="SNAME"/>

    <TextView
        android:id="@+id/dltWarn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/selectedDlt"
        app:layout_constraintTop_toBottomOf="@id/selectedDlt"
        app:layout_constraintEnd_toEndOf="@id/cancelRemoveSearch"
        android:layout_marginTop="14dp"
        android:text="Are you sure you want to delete this entry from your search history?"/>


</androidx.constraintlayout.widget.ConstraintLayout>